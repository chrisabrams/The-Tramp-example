.tooltip
  position absolute
  z-index 500
  display block
  visibility visible
  padding 5px
  font-size 11px
  line-height 14px
  opacity 0
  z-index 1

  &.in
    opacity 80

  &.top
    margin-top -5px

  &.right
    margin-left 5px

  &.bottom
    margin-top  5px

  &.left
    margin-left -5px

.tooltip-inner
  max-width 300px
  padding 5px 10px
  color white
  text-align center
  text-decoration none
  background-color black
  border-radius 2px
  font-size 11px
  line-height 14px
  position relative

.tooltip-arrow
  position absolute
  width 0
  height 0
  border-color transparent
  border-style solid

.tooltip
  &.top .tooltip-arrow
    bottom 0
    left 50%
    margin-left -(5px)
    border-width 5px 5px 0
    border-top-color black

  &.right .tooltip-arrow
    top 50%
    left 0
    margin-top -(5px)
    border-width 5px 5px 5px 0
    border-right-color black

  &.left .tooltip-arrow
    top 50%
    right 0
    margin-top -(5px)
    border-width 5px 0 5px 5px
    border-left-color black

  &.bottom .tooltip-arrow
    top 0
    left 50%
    margin-left -(5px)
    border-width 0 5px 5px
    border-bottom-color black

.tooltip.tooltip-error

  .tooltip-inner
    background-color error-red

  &.top .tooltip-arrow
    border-top-color error-red

  &.right .tooltip-arrow
    border-right-color error-red

  &.left .tooltip-arrow
    border-left-color error-red

  &.bottom .tooltip-arrow
    border-bottom-color error-red

.modal-body .tooltip-inner
  width 200px
