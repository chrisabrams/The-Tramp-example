body > header
  background-color #fff
  box-shadow 0 1px 1px 1px rgba(0,0,0,0.05)
  box-sizing border-box
  color #222
  height 50px
  line-height 50px
  position fixed
  width 100%
  z-index 10

  a
    color #222
    margin-right 10px
    text-decoration none

  a:last-of-type
    margin-right 0

  #logo
    line-height 44px
    margin 0

    a
      color red-orange
      font-size 20px
      font-weight 300
      text-transform lowercase

  #search-bar-container
    margin 0 0 0 10px
    position relative

    .icon-search
      position absolute
      right 2px
      top 2px

  #search-bar
    background-color #fff
    border 0
    border-radius 6px
    box-shadow inset 0 0 3px rgba(0,0,0,0.25)
    box-sizing border-box
    color #222
    font-size 14px
    height 24px
    padding 8px
    vertical-align middle !important
    width 500px

  #cart-btn
    font-size 10px
    position relative

    &:before
      font-size 14px

    #cart-count
      background-color #222
      border-radius 8px
      color #fff
      display none
      height 16px
      line-height 16px
      position absolute
      right -8px
      text-align center
      top -16px
      width 16px

  #alt-menu
    margin-right 20px

  .block-link
    border-right 1px solid #efefef
    box-sizing border-box
    display inline-block
    font-size 14px
    line-height 14px
    height 50px
    margin 0
    padding 10px

    &.last
      border-right 0

    .title
      color red-orange
      display block
      font-weight 500

    .label
      color #666
      font-weight 300
      padding 0

  .dropdown
    display inline-block

  .dropdown-toggle:hover, .dropdown-toggle
    color #222
    text-decoration none
